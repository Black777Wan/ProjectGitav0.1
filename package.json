{
  "name": "ananta-notes",
  "version": "1.0.0",
  "description": "Roam-style note-taking application with synchronized audio recording",
  "main": "src/main/main.js",
  "homepage": "./",  "scripts": {
    "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:react": "react-scripts start",
    "start:electron": "electron .",
    "build": "react-scripts build",
    "build:electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps",
    "setup-db": "node setup-database.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },"dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "date-fns": "^2.30.0",
    "@tiptap/react": "^2.1.13",
    "@tiptap/starter-kit": "^2.1.13",
    "@tiptap/extension-task-list": "^2.1.13",
    "@tiptap/extension-task-item": "^2.1.13",
    "@tiptap/extension-list-item": "^2.1.13",
    "@tiptap/extension-bullet-list": "^2.1.13",
    "@tiptap/extension-ordered-list": "^2.1.13",
    "styled-components": "^6.1.1",
    "react-router-dom": "^6.20.1"
  },  "devDependencies": {
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^2.0.0",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7"
  },
  "build": {
    "appId": "com.ananta.notes",
    "productName": "Ananta Notes",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "src/main/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
