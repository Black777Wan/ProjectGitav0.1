{
  "productName": "Obsidian Replica",
  "version": "0.1.0",
  "identifier": "com.manus.obsidianreplica",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Obsidian Replica",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null,
      "allowlist": {
        "all": false,
        "shell": {
          "all": false,
          "open": true
        },
        "dialog": {
          "all": true
        },
        "fs": {
          "all": true,
          "scope": ["$APP/*", "$DOCUMENT/*"]
        },
        "path": {
          "all": true
        },
        "protocol": {
          "asset": true,
          "assetScope": ["$APP/*"]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Productivity",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": false
  },
  "plugins": {}
}