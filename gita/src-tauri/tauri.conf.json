{
  "productName": "Obsidian Replica",
  "version": "0.1.0",
  "identifier": "com.manus.obsidianreplica",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Obsidian Replica",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APP/*"]
      },
      "capabilities": [
        {
          "identifier": "default-ipc",
          "description": "Capability for default IPC permissions",
          "windows": ["*"],
          "permissions": [
            "tauri:shell_open",
            "tauri:dialog_open",
            "tauri:dialog_save",
            "tauri:dialog_message",
            "tauri:fs_read_dir_recursive",
            "tauri:fs_read_file",
            "tauri:fs_write_file_append",
            "tauri:fs_write_file",
            "tauri:fs_create_dir_recursive",
            "tauri:fs_remove",
            "tauri:fs_rename",
            "tauri:fs_copy_file",
            "tauri:fs_exists",
            "tauri:path_all",
            "tauri:protocol_asset"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Productivity",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": false
  },
  "plugins": {}
}
